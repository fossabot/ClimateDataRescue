<script type="text/template" id="transcription-toolbar-template">
    <div id="transcription-buttons" class="btn-toolbar" role="toolbar">
        <div class="btn-group" role="group" data-purpose="action buttons">
            <button id="new-annotation" type="button" class="btn btn-primary">Transcribe</button>
        </div>
        <div class="btn-group" role="group" data-purpose="guide and help">
            <a href="/tutorial" target="tutorial" class="btn btn-default">Instructions</a>
            <a href="/feedback" target="feedback" class="btn btn-default">Feedback</a>
        </div>
        <div class="btn-group">
          <button class="btn btn-default zoom-btn btn-zoom-out" style="border-right: none;">
              <i class="fa fa-search-minus"></i>
          </button>
          <div class="dropdown btn-zoom-level" style="float: left;">
            <button type="button" class="btn dropdown-toggle btn-default"  style="border-radius: 0px;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <strong><span class="current-zoom">100</span>%</strong>&nbsp;<span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li><a data-zoom-level="25">25%</a></li>
              <li><a data-zoom-level="50">50%</a></li>
              <li><a data-zoom-level="75">75%</a></li>
              <li><a data-zoom-level="100">100%</a></li>
              <li><a data-zoom-level="125">125%</a></li>
              <li><a data-zoom-level="150">150%</a></li>
              <li><a data-zoom-level="175">175%</a></li>
              <li><a data-zoom-level="200">200%</a></li>
              <li><a data-zoom-level="225">225%</a></li>
              <li><a data-zoom-level="250">250%</a></li>
              <li><a data-zoom-level="275">275%</a></li>
              <li><a data-zoom-level="300">300%</a></li>
            </ul>
          </div>
           <button class="btn btn-default zoom-btn btn-zoom-in" style="border-left: none;">
              <i class="fa fa-search-plus"></i>
          </button>
        </div>
    </div>
    <div id="transcription-form-container">
        <button id="stop-transcribing" class="btn btn-default pull-right">Stop Transcribing</button>
    </div>

</script>

