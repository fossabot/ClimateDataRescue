<div class="row">
  <div class="col-md-12">
  <%= simple_form_for([:admin, @page_type]) do |f| %>
    <div class="col-md-12">
      <% if @page_type.errors.any? %>
        <!-- #error_explanation -->
          <h2><%= pluralize(@page_type.errors.count, "error") %> prohibited this pagetype from being saved: </h2>
          <ul>
            <% @page_type.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
    <%= f.error_notification %>
    </div>
    <%= f.input :visible %>
    <div class="row">
      <div class="col-md-6">
        <%= f.association :ledger, include_blank: false, label: t('register') %>
      </div>
      <div class="col-md-6">
        <%= f.input :number %>
      </div>
    </div>
    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :description %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  <% end %>
  </div>
</div>